<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.coretera.clientview.MainActivity">

    <TextView
        android:id="@+id/overview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/overview_text"
        android:textColor="@color/colorText1"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/black_overlay"
            android:indeterminateTintMode="src_in"
            android:indeterminate="true"
            android:gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="@string/loading_text"
            android:textColor="@color/black_overlay"
            android:textSize="16sp"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fullscreen_content_controls2"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/button_config"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:text="@string/button_config"/>

        <Button
            android:id="@+id/button_update"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_get_app_black_24dp"
            android:text="@string/button_update"
            android:enabled="false"/>

        <Button
            android:id="@+id/button_play"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_play_arrow_black_24dp"
            android:text="@string/button_play"
            android:enabled="false"/>

    </LinearLayout>

</LinearLayout>
