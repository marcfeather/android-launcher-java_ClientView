<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.coretera.clientview.SettingActivity">

    <LinearLayout
        android:id="@+id/title_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/overview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:keepScreenOn="true"
            android:text="@string/config_title"
            android:textColor="@color/colorText1"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/title_content_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/nestedScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/section_wifi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:id="@+id/config_wifi_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="WIFI"
                    android:textColor="@color/colorText1"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wifi_status_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText2"
                            android:text="status"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/wifi_status_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/colorDisconnect"
                            android:text="@string/disconnect"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <Button
                        android:id = "@+id/wifi_scan"
                        android:layout_width = "120dp"
                        android:layout_height = "40dp"
                        android:layout_alignParentRight="true"
                        android:text = "Scan wifi" />

                </RelativeLayout>

                <ListView
                    android:id = "@+id/wifiList"
                    android:layout_width = "match_parent"
                    android:layout_height = "400dp"
                    android:layout_marginTop="10dp"
                    android:scrollbars="vertical"/>

                <TextView
                    android:id="@+id/wifi_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText2"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <EditText
                    android:id = "@+id/wifi_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="16dp"
                    android:textColor="@color/colorText2"
                    android:visibility="gone"/>

                <Button
                    android:id = "@+id/wifi_connect"
                    android:layout_width = "match_parent"
                    android:layout_height = "40dp"
                    android:layout_gravity = "bottom"
                    android:text = "connect"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_setting_play"
                android:layout_below="@+id/section_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:id="@+id/config_play_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="PLAY"
                    android:textColor="@color/colorText1"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/slide_time_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText2"
                            android:text="slide time (sec)"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">

                        <Button
                            android:id = "@+id/slide_time_decrease"
                            android:layout_width = "40dp"
                            android:layout_height = "40dp"
                            android:text = "-" />

                        <TextView
                            android:id="@+id/slide_time_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@color/colorText2"
                            android:text="0"
                            android:textSize="16sp"/>

                        <Button
                            android:id = "@+id/slide_time_increase"
                            android:layout_width = "40dp"
                            android:layout_height = "40dp"
                            android:text = "+" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_done"
            style="?metaButtonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/button_done"/>

    </LinearLayout>

</RelativeLayout>
